{
	"name": "lookat",
	"version": "0.0.1",
	"source": "./src/index.ts",
	"main": "./dist/lookat.js",
	"module": "./dist/lookat.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/lookat.git"
	},
	"license": "MIT",
	"scripts": {
		"verify": "yarn lint & tsc --noEmit",
		"fix": "yarn lint --fix",
		"lint": "eslint . --ignore-path .gitignore",
		"test": "jest",
		"format": "prettier . --ignore-path .gitignore --ignore-path .prettierignore --write",
		"build": "quickbundle build",
		"watch": "quickbundle watch",
		"sandbox": "parcel example/index.html"
	},
	"peerDependencies": {
		"react": "^16.0.0 || ^17.0.0",
		"react-dom": "^16.0.0 || ^17.0.0"
	},
	"prettier": "@adbayb/prettier-config",
	"eslintConfig": {
		"extends": "@adbayb",
		"rules": {
			"sonarjs/no-duplicate-string": "off",
			"sonarjs/cognitive-complexity": "off",
			"@typescript-eslint/ban-ts-comment": "off",
			"@typescript-eslint/ban-types": "off"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"yarn lint"
		],
		"**/*.{json,md,mdx,html,css}": [
			"yarn format"
		]
	},
	"devDependencies": {
		"@adbayb/eslint-config": "0.10.0",
		"@adbayb/prettier-config": "0.10.0",
		"@adbayb/ts-config": "0.10.0",
		"@types/jest": "27.0.3",
		"@types/react": "17.0.37",
		"@types/react-dom": "17.0.11",
		"eslint": "8.3.0",
		"husky": "4.3.8",
		"jest": "27.3.1",
		"lint-staged": "12.1.2",
		"parcel-bundler": "1.12.5",
		"prettier": "2.5.0",
		"quickbundle": "0.6.0",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"ts-jest": "27.0.7",
		"typescript": "4.5.2"
	}
}
